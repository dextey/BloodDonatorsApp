@model IEnumerable<BloodDonatorsApp.ViewModel.DisplayDonationDetailsViewModel>


@{
    ViewBag.Title = "Blood donors app";
    
}
    
<h1 class="text-center">List of our blood donors</h1>

<div class="row">
@foreach (var record in Model)
{

    <div class="col-md-4">
        <div class="card bg-light  mb-2 mt-5">
            <div class="card-header">
                <h5 class="card-title text-center">@record.First_Name</h5>
            </div>
            <div class="card-body">
                <p class="card-text text-center">@record.Last_Name</p>
                <div class="text-center">
                <input type="button" value="Show details" class="btn btn-danger" onclick="location.href='@Url.Action("ShowDetails", "Donations", record)'" />
                </div>
                
            </div>
        </div>
        
    </div>

}
</div>



